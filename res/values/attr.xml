<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AsyncImageView">
        <attr name="imageLayout" format="reference" />
        <attr name="loadingBackground" format="reference" />
        <attr name="loadFailedDrawable" format="reference" />
        <attr name="imageUrl" format="string" />
        <attr name="scaleType">
            <enum name="matrix" value="0" />
            <enum name="fitXY" value="1" />
            <enum name="fitStart" value="2" />
            <enum name="fitCenter" value="3" />
            <enum name="fitEnd" value="4" />
            <enum name="center" value="5" />
            <enum name="centerCrop" value="6" />
            <enum name="centerInside" value="7" />
        </attr>
        <attr name="progressStyle" format="reference" />
    </declare-styleable>

</resources>